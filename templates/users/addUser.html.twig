{% extends 'base.html.twig' %}
{% block title %}Ajouter un salarié{% endblock %}  
{% block body %}
<div class="row">
        <div class="col-md-6 mx-auto"> 
            <h1>Ajouter un salarié</h1>
            {{ form_start(monForm, {'attr': {'class': 'my-5'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(monForm.nom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(monForm.prenom) }}
                    </div>
                </div>
                {{ form_row(monForm.emailPerso) }}



                <button type="submit" class="btn btn-lg btn-primary d-grid gap-2 col-6 mx-auto">Enregistrer</button> 

                {# <p class="mt-5 mb-3 text-center text-muted"> Vous avez déjà un compte? <a href="{{ path('app_login') }}">Merci de vous identifier.</a></p> #}

            {{ form_end(monForm) }}
        </div>
    </div>
{% endblock %}